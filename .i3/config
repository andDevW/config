     bindsym 1 exec ~/.screenlayout/one.sh
     bindsym 2 exec ~/.screenlayout/mirrored-hdmi.sh
     bindsym 3 exec ~/.screenlayout/mirrored-vga.sh
     bindsym 4 exec ~/.screenlayout/three.sh

     bindsym Return mode "default"
