# media
bindsym F12 exec ~/.local/bin/volume_up
bindsym F11 exec ~/.local/bin/volume_down
bindsym F10 exec ~/.local/bin/volume_toggle

bindsym XF86AudioRaiseVolume exec ~/.local/bin/volume_up
bindsym XF86AudioLowerVolume exec ~/.local/bin/volume_down
bindsym XF86AudioMute exec ~/.local/bin/volume_toggle

bindsym XF86MonBrightnessDown exec light -U 15
bindsym XF86MonBrightnessUp exec light -A 15

bindsym KP_Up exec light -A 3
bindsym KP_Down exec light -U 3

mode "media" {
     # play/pause
     bindsym --release space exec --no-startup-id xdotool key --clearmodifiers XF86AudioPlay

     # next/prev
     bindsym --release j exec --no-startup-id xdotool key --clearmodifiers XF86AudioPrev
     bindsym --release semicolon exec --no-startup-id xdotool key --clearmodifiers XF86AudioNext

     bindsym Return mode "default"
     bindsym Escape mode "default"
}

# nuvola things
bindsym $mod+Right exec --no-startup-id nuvolaplayer3ctl action next-song
bindsym $mod+Left exec --no-startup-id nuvolaplayer3ctl action prev-song
bindsym $mod+Up exec --no-startup-id nuvolaplayer3ctl action thumbs-up
bindsym $mod+Down exec --no-startup-id nuvolaplayer3ctl action thumbs-down
bindsym $mod+backslash exec --no-startup-id nuvolaplayer3ctl action toggle-play

bindsym $mod+m mode "media"

bindsym $mod+Shift+Delete exec i3lock --color 000000

